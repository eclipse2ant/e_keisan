module Worksheet
  def [] y,x
    cell=self.getRow(y-1).getCell(x-1)
#   cell=self.getRow(y-1).getCell(x-1,RETURN_BLANK_AS_NULL)
#   p cell
    if cell.nil? 
      return nil
    elsif
      type=cell.getCellType()
      p type
      if type == 0
        return cell.getNumericCellValue
      elsif type == 1
        return cell.getStringCellValue
      end
    end
  end
end


