Gotei_file='nanatei_1.xlsx'

include Apath

  def get_filename
    FileInputStream.new(apath(Gotei_file))
  end

  def get_sheet(excel,filename)
    workBook= XSSFWorkbook.new(filename)
    sheet = workBook.getSheetAt(0)
#    p sheet
#    p sheet
    sheet.extend Worksheet
    return sheet	
  end

end

